<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_List">
        <definition>
            <!-- Poster List -->
            <control type="group">
                <visible>Control.IsVisible(50)</visible>
                <control type="group">
                    <left>view_left</left>
                    <right>view_pad</right>
                    <top>view_pad</top>
                    <bottom>view_pad</bottom>
                    
                    <control type="fixedlist" id="50">
                        <animation effect="slide" end="0,-90" condition="Integer.IsLess(Container(50).NumItems,9)">Conditional</animation>
                        <animation effect="slide" end="0,-90" condition="Integer.IsLess(Container(50).NumItems,7)">Conditional</animation>
                        <animation effect="slide" end="0,-90" condition="Integer.IsLess(Container(50).NumItems,5)">Conditional</animation>
                        <animation effect="slide" end="0,-90" condition="Integer.IsLess(Container(50).NumItems,3)">Conditional</animation>
                        <viewtype label="$LOCALIZE[535]">list</viewtype>
                        <include content="View_Forced">
                            <param name="string" value="$LOCALIZE[535]" />
                        </include>
                        <include content="View_List_Layout">
                            <param name="id" value="50" />
                        </include>
                    </control>
                </control>
                <include>Object_Scrollbar_Vert</include>
            </control>

            

            <!-- Media Info -->
            <control type="group">
                <visible>Control.IsVisible(500)</visible>
                <control type="group">
                    <left>880</left>
                    <right>view_pad</right>
                    <top>view_pad</top>
                    <bottom>view_pad</bottom>
                    <control type="fixedlist" id="500">
                        <animation effect="slide" end="0,-90" condition="Integer.IsLess(Container(500).NumItems,9)">Conditional</animation>
                        <animation effect="slide" end="0,-90" condition="Integer.IsLess(Container(500).NumItems,7)">Conditional</animation>
