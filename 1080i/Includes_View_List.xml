                        <animation effect="slide" end="0,-90" condition="Integer.IsLess(Container(500).NumItems,3)">Conditional</animation>
                        <visible>Container.Content(movies) | Container.Content(episodes) | Container.Content(tvshows) | Container.Content(sets) | Container.Content(seasons) | Container.Content(artists) | Container.Content(videos)</visible>
                        <include>View_NotTheseWindows</include>
                        <viewtype label="$LOCALIZE[31298]">list</viewtype>
                        <include content="View_Forced">
                            <param name="string" value="$LOCALIZE[31298]" />
                        </include>
                        <include content="View_List_Layout">
                            <param name="width" value="1000" />
                            <param name="id" value="500" />
                        </include>
                    </control>
                </control>
                
                <include>Object_Scrollbar_Vert</include>
            </control>

            <!-- Info List -->
            <control type="group">
                <visible>Control.IsVisible(501)</visible>
                <control type="group">
                    <left>view_left</left>
                    <right>view_pad</right>
