                                    <width>340</width>
                                    <height>100%</height>
                                    <aligny>center</aligny>
                                    <textcolor>main_fg_30</textcolor>
                                    <font>font_tiny_bold_uppercase</font>
                                    <label>$INFO[ListItem.ChannelNumber,,. ]$INFO[ListItem.ChannelName,,]</label>
                                </control>
                                <control type="label">
                                    <left>400</left>
                                    <right>300</right>
                                    <height>100%</height>
                                    <aligny>center</aligny>
                                    <textcolor>main_fg_70</textcolor>
                                    <font>font_tiny_uppercase</font>
                                    <label>$INFO[ListItem.Title]</label>
                                </control>
                                <control type="label">
                                    <left>800</left>
                                    <right>340</right>
                                    <height>100%</height>
                                    <aligny>center</aligny>
                                    <align>right</align>
                                    <textcolor>main_fg_30</textcolor>
                                    <font>font_tiny_uppercase</font>
                                    <scroll>false</scroll>
                                    <label>$INFO[ListItem.NextTitle]</label>
                                </control>
                                <control type="label">
                                    <width>125</width>
                                    <right>155</right>
                                    <height>100%</height>
                                    <aligny>center</aligny>
                                    <align>right</align>
