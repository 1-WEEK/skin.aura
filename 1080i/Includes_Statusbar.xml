<?xml version="1.0" encoding="UTF-8"?>
<includes>
    
    <include name="Statusbar_PlayerProgress">
        <control type="progress" description="cache">
            <width>100%</width>
            <height>12</height>
            <bottom>0</bottom>
            <info>Player.ProgressCache</info>
            <texturebg colordiffuse="00ffffff" border="4">diffuse/progress-bg.png</texturebg>
            <lefttexture colordiffuse="main_fg_12" border="4">diffuse/progress-left.png</lefttexture>
            <midtexture colordiffuse="main_fg_12" border="4">diffuse/progress-end.png</midtexture>
            <righttexture colordiffuse="main_fg_12" border="4">diffuse/progress-right.png</righttexture>
            <!-- <texturebg colordiffuse="00ffffff">osd/progress-bg.png</texturebg>
            <lefttexture colordiffuse="main_fg_12">osd/progress-end.png</lefttexture>
            <midtexture colordiffuse="main_fg_12">osd/progress-end.png</midtexture>
            <righttexture colordiffuse="main_fg_12">osd/progress-end.png</righttexture> -->
            <visible>Player.Playing | Player.Paused | Player.Caching</visible>
            <visible>!Player.Seeking</visible>
            <visible>Player.HasMedia</visible>
        </control>
        <control type="progress" id="499">
            <width>100%</width>
            <height>12</height>
            <bottom>0</bottom>
            <info>Player.Progress</info>
            <!-- <texturebg colordiffuse="00ffffff">osd/progress-bg.png</texturebg>
            <lefttexture colordiffuse="main_fg_30">osd/progress-end.png</lefttexture>
            <midtexture colordiffuse="main_fg_30">osd/progress-end.png</midtexture>
            <righttexture colordiffuse="main_fg_30">osd/progress-end.png</righttexture> -->
            <visible>Player.HasMedia</visible>
        </control>
        <control type="progress">
            <description>Progressbar</description>
            <width>100%</width>
            <height>12</height>
            <bottom>0</bottom>
            <info>Player.Progress</info>
            <texturebg colordiffuse="00ffffff" border="4">diffuse/progress-bg.png</texturebg>
            <lefttexture colordiffuse="00ffffff" border="4">diffuse/progress-left.png</lefttexture>
            <midtexture colordiffuse="$VAR[ColorHighlight2]" border="4" diffuse="progress/diffuse.png">diffuse/progress-end.png</midtexture>
            <righttexture colordiffuse="$VAR[ColorHighlight2]" border="4" diffuse="progress/diffuse-end.png">diffuse/progress-right.png</righttexture>
            <include content="Defs_Progress_Colorfade">
                <param name="id" value="499" />
            </include>
        </control>
    </include>

    <include name="Statusbar_Texture">
        <control type="image">
            <top>-24</top>
            <height>24</height>
            <width>100%</width>
            <texture flipy="true">common/shadow-line-24px.png</texture>
        </control>
        <control type="image">
            <bottom>0</bottom>
            <top>0</top>
            <aspectratio>scale</aspectratio>
            <texture colordiffuse="main_bg_100">common/white.png</texture>
        </control>
        <control type="image">
            <top>0</top>
            <height>1</height>
            <texture colordiffuse="PixelLines">common/white.png</texture>
        </control>
    </include>

    <include name="Statusbar_Info_Clock">
        <control type="group">
            <bottom>view_pad</bottom>
            <left>view_pad</left>
            <right>view_pad</right>
            <include>Statusbar_PlayerProgress</include>
            <include>Statusbar_NowPlaying</include>
        </control>
    </include>


    <include name="Statusbar_NowPlaying">
        <control type="grouplist">
            <orientation>horizontal</orientation>
            <height>view_pad</height>
            <bottom>12</bottom>
            <align>left</align>
            <itemgap>12</itemgap>
            <control type="label">
                <textoffsetx>0</textoffsetx>
                <textcolor>main_fg_100</textcolor>
                <include>Statusbar_Menubar_Items</include>
                <label>$VAR[Label_PlayerStatus]</label>
            </control>
        </control>
        <control type="grouplist">
            <orientation>horizontal</orientation>
            <height>view_pad</height>
            <bottom>12</bottom>
            <align>center</align>
            <itemgap>12</itemgap>
            <control type="label">
                <textcolor>main_fg_100</textcolor>
                <include>Statusbar_Menubar_Items</include>
                <label>$INFO[VideoPlayer.TvShowTitle,[COLOR=main_fg_70],[/COLOR][COLOR=main_fg_30]  •  [/COLOR]]$INFO[MusicPlayer.Artist,[COLOR=main_fg_70],[/COLOR][COLOR=main_fg_30]  •  [/COLOR]]$INFO[VideoPlayer.Season,,x]$INFO[VideoPlayer.Episode,,. ]$INFO[Player.Title]</label>
            </control>
        </control>
        <control type="grouplist">
            <height>view_pad</height>
            <bottom>12</bottom>
            <align>right</align>
            <left>0</left>
            <right>0</right>
            <itemgap>12</itemgap>
            <usecontrolcoords>true</usecontrolcoords>
            <orientation>horizontal</orientation>
            <control type="label">
                <textcolor>$VAR[ColorHighlight]</textcolor>
                <include>Statusbar_Menubar_Items</include>
                <label>$INFO[Player.Time]</label>
            </control>
            <control type="label">
                <textcolor>main_fg_100</textcolor>
                <include>Statusbar_Menubar_Items</include>
                <label>|</label>
            </control>
            <control type="label">
                <textcolor>$VAR[ColorHighlight]</textcolor>
                <include>Statusbar_Menubar_Items</include>
                <label>$INFO[Player.Duration]</label>
            </control>
        </control>
    </include>

    <include name="Statusbar_Menubar_Items">
        <font>font_tiny</font>
        <textcolor>main_fg_100</textcolor>
        <aligny>center</aligny>
        <width>auto</width>
        <height>100%</height>
    </include>
</includes>